{
  "dashboard": {
    "title": "DevOps Pipeline Demo - Application Metrics",
    "tags": ["devops", "nodejs", "express"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "graph",
        "title": "Request Rate (req/sec)",
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}} {{route}} - {{status_code}}"
          }
        ]
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "graph",
        "title": "Request Duration (seconds)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ]
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
        "type": "stat",
        "title": "Total Requests",
        "targets": [
          {
            "expr": "sum(http_requests_total)"
          }
        ]
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
        "type": "stat",
        "title": "Active Connections",
        "targets": [
          {
            "expr": "active_connections"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
        "type": "stat",
        "title": "Uptime (seconds)",
        "targets": [
          {
            "expr": "process_uptime_seconds"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "type": "graph",
        "title": "Memory Usage (MB)",
        "targets": [
          {
            "expr": "nodejs_heap_size_used_bytes / 1024 / 1024",
            "legendFormat": "Heap Used"
          },
          {
            "expr": "nodejs_heap_size_total_bytes / 1024 / 1024",
            "legendFormat": "Heap Total"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m])",
            "legendFormat": "CPU Usage"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
        "type": "table",
        "title": "HTTP Status Codes",
        "targets": [
          {
            "expr": "sum by (status_code) (http_requests_total)",
            "format": "table",
            "instant": true
          }
        ]
      }
    ],
    "refresh": "5s",
    "time": { "from": "now-15m", "to": "now" }
  }
}
